{
  "name": "@cryptforge/automerge-repo",
  "version": "2.5.2-cryptforge.1",
    "description": "A repository object to manage a collection of automerge documents (CryptForge fork)",
    "repository": {
    "type": "git",
    "url": "git@github.com:viktor-albus/automerge-repo.git",
    "directory": "packages/automerge-repo"
  },
  "author": "Peter van Hardenberg <pvh@pvh.ca>",
  "contributors": [
    "Viktor Albus <viktor@cryptforge.io>"
  ],
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "watch": "npm-watch build",
    "test:coverage": "c8 --reporter=lcov --reporter=html --reporter=text pnpm test",
    "test": "vitest",
    "test:watch": "npm-watch test",
    "fuzz": "ts-node --esm --experimentalSpecifierResolution=node fuzz/fuzz.ts"
  },
  "browser": {
    "crypto": false
  },
  "devDependencies": {
    "@types/debug": "^4.1.12",
    "http-server": "^14.1.0",
    "ts-node": "^10.9.2",
    "vite": "^5.0.8"
  },
  "dependencies": {
    "@automerge/automerge": "2.2.8 - 3",
    "bs58check": "^3.0.1",
    "cbor-x": "^1.3.0",
    "debug": "^4.3.4",
    "eventemitter3": "^5.0.1",
    "fast-sha256": "^1.3.0",
    "uuid": "^13.0.0",
    "xstate": "^5.9.1"
  },
  "exports": {
    ".": "./dist/entrypoints/fullfat.js",
    "./slim": "./dist/entrypoints/slim.js",
    "./helpers/*.js": "./dist/helpers/*.js"
  },
  "watch": {
    "build": {
      "patterns": "./src/**/*",
      "extensions": [
        ".ts"
      ]
    },
    "test": {
      "quiet": true,
      "patterns": [
        "./src/**/*",
        "./test/**/*"
      ],
      "extensions": [
        ".ts"
      ]
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "automerge",
    "crdt",
    "collaboration",
    "cryptforge",
    "fork"
  ]
}
